            <file>tests/RequestHandlerQueryIndexTest.php</file>
            <file>tests/RequestHandlerDropIndexTest.php</file>
            <file>tests/RequestHandlerFlushIndexTest.php</file>
            <file>tests/RequestHandlerRebuildIndexTest.php</file>
            <file>tests/RequestHandlerMassImportTest.php</file>
        </testsuite>
        <testsuite name="all">
            <file>tests/StorageAdapterFilesystemTest.php</file>
            <file>tests/PreparerTest.php</file>
            <file>tests/NgramsTest.php</file>
            <file>tests/NgramIndexTest.php</file>
            <file>tests/RequestValidatorTest.php</file>
            <file>tests/RequestHandlerApiInfoTest.php</file>
            <file>tests/RequestHandlerCreateIndexTest.php</file>
            <file>tests/RequestHandlerIndexListTest.php</file>
            <file>tests/RequestHandlerIndexInfoTest.php</file>
            <file>tests/RequestHandlerAddToIndexTest.php</file>
            <file>tests/RequestHandlerQueryIndexTest.php</file>
            <file>tests/RequestHandlerDropIndexTest.php</file>
            <file>tests/RequestHandlerFlushIndexTest.php</file>
            <file>tests/RequestHandlerRebuildIndexTest.php</file>
            <file>tests/RequestHandlerMassImportTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>
